{{#element-example name="is-adult" as |ex|}}
  {{#ex.code}}
    {{!-- BEGIN-SNIPPET is-adult --}}
    {{#paper-checkbox checked=isAdult}}
    I am above eighteen
    {{/paper-checkbox}}
    {{!-- END-SNIPPET --}}
  {{/ex.code}}

  {{#ex.result}}
    {{!-- BEGIN-SNIPPET is-adult-result --}}
    {{#if isAdult}}
      You may drink alcohol (in Europe)
    {{else}}
      You're too young for alcohol!
    {{/if}}
    {{!-- END-SNIPPET --}}
  {{/ex.result}}
{{/element-example}}
