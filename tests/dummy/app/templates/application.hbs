<paper-drawer-panel>
  <paper-header-panel drawer>
    <paper-toolbar>
      <div>Drawer</div>
    </paper-toolbar>
    <paper-menu>
      {{#link-to 'index' tabindex="-1"}}
        <paper-item>Home</paper-item>
      {{/link-to}}
      {{#link-to 'input-elements' tabindex="-1"}}
        <paper-item>Input elements</paper-item>
      {{/link-to}}
    </paper-menu>
  </paper-header-panel>
  <paper-header-panel main>
    <paper-toolbar>
      <paper-icon-button icon="menu" paper-drawer-toggle></paper-icon-button>
      <div>Ember Polymer Paper demo</div>
    </paper-toolbar>
    <div class="outlet">
      <h1>ember-polymer-paper</h1>
      {{outlet}}
    </div>
  </paper-header-panel>
</paper-drawer-panel>
